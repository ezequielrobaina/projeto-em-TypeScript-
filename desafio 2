// Como podemos melhorar o esse usando o código TS?

deixe  pessoa1  =  { } ;
pessoa1 . nome  =  "maria" ;
pessoa1 . idade  =  29 ;
pessoa1 . profissao  =  "atriz"

deixe  pessoa2  =  { }
pessoa2 . nome  =  "roberto" ;
pessoa2 . idade  =  19 ;
pessoa2 . profissao  =  "Padeiro" ;

deixe  pessoa3  =  {
    nome : "laura" ,
    idade : "32" ,
    profissao : "Atriz"
} ;

deixe  pessoa4  =  {
    nome =  "carlos" ,
    idade =  19 ,
    profissao =  "padeiro"
}








enum  Trabalho  {
    Atriz ,
    Padeiro
}

tipo  Humano  =  {
    nome : string ,
    idade : número ,
    profissão : Trabalho
}

deixe  pessoa1 : Humano  =  {
    nome : 'maria' ,
    idade : 29 ,
    profissão : Trabalho . Atriz
} ;

deixe  pessoa2 : Humano  =  {
    nome : 'roberto' ,
    idade : 19 ,
    profissão : Trabalho . Padeiro
} ;

deixe  pessoa3 : Humano  =  {
    nome : 'laura' ,
    idade : 32 ,
    profissão : Trabalho . Atriz
} ;

deixe  pessoa4 : Humano  =  {
    nome : "carlos" ,
    idade : 19 ,
    profissão : Trabalho . Padeiro
}
